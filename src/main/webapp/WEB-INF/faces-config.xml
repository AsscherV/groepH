<?xml version="1.0" encoding="UTF-8"?>
<faces-config
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
        version="2.0">

    <!-- JSF and Spring are integrated -->
    <!-- Spring Annotations -->
    <application>
        <el-resolver>
            org.springframework.web.jsf.el.SpringBeanFacesELResolver
        </el-resolver>
    </application>

    <application>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>nl</supported-locale>
            <supported-locale>en_US</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>messages</base-name>
            <var>msgs</var>
        </resource-bundle>
    </application>


    <navigation-rule>
        <navigation-case>
            <from-action>#{loginBean.logOut}</from-action>
            <from-outcome>SUCCESS</from-outcome>
            <to-view-id>/pages/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <navigation-case>
            <from-action>#{loginBean.loginUser}</from-action>
            <from-outcome>SUCCESS</from-outcome>
            <to-view-id>/pages/user/trip.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-action>#{loginBean.tempPasswordLogin}</from-action>
            <from-outcome>SUCCESS</from-outcome>
            <to-view-id>/pages/user/trip.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-action>#{loginBean.loginUser}</from-action>
            <from-outcome>RESET</from-outcome>
            <to-view-id>/pages/newPassword.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <navigation-case>
            <from-action>#{tripBean.addTrip}</from-action>
            <from-outcome>SUCCESS</from-outcome>
            <to-view-id>/pages/user/trip.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <navigation-case>
            <from-outcome>SETTRIP</from-outcome>
            <to-view-id>/pages/user/trip.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <navigation-case>
            <from-action>#{socialBean.login}</from-action>
            <from-outcome>SUCCESS</from-outcome>
            <to-view-id>/pages/user/welcome.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{socialBean.login}</from-action>
            <from-outcome>FAILURE</from-outcome>
            <to-view-id>/pages/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <navigation-case>
            <from-action>#{waypointBean.setThisAsCurrentWaypoint}</from-action>
            <from-outcome>WAYPOINT</from-outcome>
            <to-view-id>/pages/user/waypoint.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <navigation-case>
            <from-outcome>STOPS</from-outcome>
            <to-view-id>/pages/user/stops.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <navigation-case>
            <from-outcome>EDITWAYPOINT</from-outcome>
            <to-view-id>/pages/user/createWaypoint.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <navigation-case>
            <from-outcome>EDITTRIP</from-outcome>
            <to-view-id>/pages/user/createTrip.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>


    <navigation-rule>
        <navigation-case>
            <from-action>#{waypointBean.addWaypoint}</from-action>
            <from-outcome>SUCCESS</from-outcome>
            <to-view-id>/pages/user/stops.xhtml</to-view-id>
            <redirect/>
            <!-- hier nog navigation rule voor failure-->
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-action>#{waypointBean.updateWaypoint}</from-action>
            <from-outcome>SUCCESS</from-outcome>
            <to-view-id>/pages/user/waypoint.xhtml</to-view-id>
            <redirect/>
            <!-- hier nog navigation rule voor failure-->
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <navigation-case>
            <from-action>#{tripBean.updateTrip}</from-action>
            <from-outcome>SUCCESS</from-outcome>
            <to-view-id>/pages/user/trip.xhtml</to-view-id>
            <redirect/>
            <!-- hier nog navigation rule voor failure-->
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <navigation-case>
            <from-action>#{waypointBean.deleteWaypoint}</from-action>
            <from-outcome>SUCCESS</from-outcome>
            <to-view-id>/pages/user/stops.xhtml</to-view-id>
            <redirect/>
            <!-- hier nog navigation rule voor failure-->
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-action>#{waypointBean.cancel}</from-action>
            <from-outcome>CANCEL</from-outcome>
            <to-view-id>/pages/user/waypoint.xhtml</to-view-id>
            <redirect/>
            <!-- hier nog navigation rule voor failure-->
        </navigation-case>
    </navigation-rule>

</faces-config>